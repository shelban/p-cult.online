title: стріми — культ особ
permalink: streams/index.html
---

<section>
    <h2>стріми</h2>
    <div class="stream-list">
        {% set allStreams = collections.streams | reverse %}
        {% for stream in allStreams %}
        <div class="stream-entry">
            {% if stream.data.thumbnail %}
            <div class="stream-entry-thumbnail">
                <a href="{{ stream.url }}">
                    <img src="{{ stream.data.thumbnail }}" alt="{{ stream.data.title }}" />
                </a>
            </div>
            {% endif %}

            <div class="stream-entry-content">
                <h3><a href="{{ stream.url }}">{{ stream.data.title }}</a></h3>
                <p class="stream-meta">
                    {{ stream.date | dateDisplay }}
                    {% if stream.data.duration %} · {{ stream.data.duration }}{% endif %}
                </p>
                {% if stream.data.tags.length > 1 %}
                <div class="stream-tags">
                    {% for tag in stream.data.tags %}{% if tag != "streams" %}<span>{{ tag }}</span>{% endif %}{% endfor %}
                </div>
                {% endif %}
                <p>{{ stream.templateContent | truncate(200) }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
